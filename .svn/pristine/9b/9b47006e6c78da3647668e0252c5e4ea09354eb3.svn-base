@import "main";

body {
  background-color: transparent;
}
.template-wrapper {
  box-sizing: border-box;
  padding: 5px 15px 15px;
}

.dataListPanel.center {
  box-sizing: border-box;
  .header {
    box-sizing: border-box;
    padding-left: 5px;
    padding-right: 5px;
    border-bottom: 1px solid #cccccc;
    font-size: 18px;
    font-weight: bold;
    line-height: 30px;
    color: #c82333;
  }
  .content {
    box-sizing: border-box;
    height: calc(100% - 31px);
    padding: 10px 0;
    text-indent: 2em;
    .scroll-content {
      padding: 0 10px;
    }
  }
}

.scrollbar-macosx {
  height: 100%;
  line-height: 20px;
}

.modal-body {
  .form-group {
    .form-label {
      width: 70px;
      text-align: right;
    }
    .form-control {
      display: inline-block;
      width: calc(100% - 80px);
      resize: none;
    }
  }


  .tw-my-layout {
    $leftWidth: 260px;
    &-left {
      width: $leftWidth;
    }
    &-main {
      width: calc(100% - #{$leftWidth} - 10px);
      margin-left: $leftWidth + 10px;
    }
  }

  .scroll-content {
    padding-right: 5px;
  }
}
