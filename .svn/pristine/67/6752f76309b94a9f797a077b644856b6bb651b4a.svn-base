.template {
  &-wrapper {
    box-sizing: border-box;
    height: 100%;
  }
}
.login {
  &-logo {
    width: 100%;
    height: 18%;
    text-align: center;
    img {
      transform: translateY(15%);
    }
  }
  &-title {
    height: 50px;
    width: 100%;
    text-align: center;
    span {
      line-height: 50px;
      font-size: 30px;
      letter-spacing: 0.4em;
      font-weight: 600;
      color: #00fff0;
    }
  }
  &-info {
    width: 100%;
    height: 80px;
    text-align: center;
  }
}

.info-content {
  width: 30%;
  height: 60px;
  margin: 15px auto 0;
}
.content-title {
  background-color: rgba(245, 245, 245, 0.1);
  width: 160px;
  color: #00fff2;
  font-weight: bold;
  border: none;
  font-size: 20px;
  padding: 20px 0px;
  float: left;
}
.content-img {
  float: right;
  width: calc((100% - 160px) / 2);
}
